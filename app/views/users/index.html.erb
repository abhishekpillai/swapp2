<h1>Listing users</h1>

<table border='1'>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>

    <td><%= user.user_name %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New User', new_user_path %>